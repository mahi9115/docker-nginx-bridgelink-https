# Docker Nginx-Bridgelink Stack Environment Variables
# Copy this file to .env and modify as needed

# Network Configuration
PROXY_NETWORK_SUBNET=172.20.0.0/24
NGINX_IP=172.20.0.5
BRIDGELINK_IP=172.20.0.10

# Port Configuration
NGINX_PORT=80
BRIDGELINK_EXPOSED_PORT=8443
BRIDGELINK_INTERNAL_PORT=6006

# Container Names
NGINX_CONTAINER_NAME=nginx-proxy
BRIDGELINK_CONTAINER_NAME=bridgelink-app

# Image Configuration
NGINX_IMAGE=nginx:alpine
BRIDGELINK_IMAGE=innovarhealthcare/bridgelink:latest

# Optional: Additional Environment Variables for Bridgelink
# Uncomment and modify as needed for your specific deployment
# BRIDGELINK_ENV_VAR1=value1
# BRIDGELINK_ENV_VAR2=value2
# BRIDGELINK_LOG_LEVEL=info
